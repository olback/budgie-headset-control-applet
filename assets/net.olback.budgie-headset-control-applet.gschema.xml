<?xml version="1.0" encoding="UTF-8"?>

<schemalist gettext-domain="budgie-headset-control-applet">

    <schema path="/net/olback/budgie-headset-control-applet/" id="net.olback.budgie-headset-control-applet">

        <key type="b" name="battery-notification">
            <default>true</default>
            <summary>Show battery notification</summary>
            <description>
                Show a notification when the battery goes below the specified threshold
            </description>
        </key>

        <key type="i" name="notify-below">
            <range min="10" max="75"></range>
            <default>25</default>
            <summary>Notification threshold in percent</summary>
            <description>
                Notification threshold in percent
            </description>
        </key>

        <key type="i" name="interval">
            <range min="1" max="999"></range>
            <default>10</default>
            <summary>Update interval</summary>
            <description>
                How often to check the battery level in seconds
            </description>
        </key>

    </schema>

</schemalist>
